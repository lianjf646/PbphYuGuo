<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_45dp"
        android:layout_height="@dimen/dp_45dp"
        android:background="@drawable/bg_vip_equity_corner">

        <ImageView
            android:id="@+id/iv_vip_picture"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_10dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_vip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10dp"
        android:layout_marginTop="@dimen/dp_10dp"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_12"
        tools:text="会员大礼包" />
</LinearLayout>
