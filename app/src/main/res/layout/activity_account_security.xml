        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/right"
            android:drawablePadding="@dimen/dp_10dp"
            tools:text="请绑定微信" />
    </RelativeLayout>

    <View
