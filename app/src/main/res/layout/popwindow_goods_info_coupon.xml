<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dp_10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="优惠券"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_17"/>

    <ImageView
        android:id="@+id/iv_dialog_goods_info_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/wd1"/>

    <ListView
        android:id="@+id/lv_goods_info_conpon_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/dp_10dp"
        android:layout_below="@+id/iv_dialog_goods_info_close"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/main_bg"
        android:dividerHeight="@dimen/dp_5dp"/>


    <Button
        android:id="@+id/btn_dialog_goods_info_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10dp"
        android:layout_below="@+id/lv_goods_info_conpon_list"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_button_main_color_corner"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_19"/>
</RelativeLayout>