<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_activity_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7E5B5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_7dp"
        android:paddingLeft="@dimen/dp_10dp"
        android:paddingRight="@dimen/dp_10dp"
        android:paddingTop="@dimen/dp_7dp">

        <TextView
            android:id="@+id/tv_event_mianjian1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="200元3件"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_event_mianjian2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="200元3件"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_best_sellers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="@color/gray_ebebeb"
        android:dividerHeight="0px"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollbars="none" />

</LinearLayout>