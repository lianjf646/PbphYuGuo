<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_group_purchase_group_purchase_goods_info_submit"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/group_purchase_goods_info_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_color"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10dp"
                    android:paddingStart="@dimen/dp_15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_3dp"
                            android:text="团购价￥"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/tv_group_purchase_goods_info_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_3dp"
                            android:includeFontPadding="false"
                            android:text="0.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_30"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_group_purchase_goods_info_discount_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3dp"
                            android:text="市场价￥0.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/main_second_color"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10dp"
                        android:layout_marginStart="@dimen/dp_15dp"
                        android:gravity="left|center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距结束还剩"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_13" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_adapter_group_goods_time_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_13" />

                            <TextView
                                android:id="@+id/tv_adapter_group_goods_time_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_13" />

                            <TextView
                                android:id="@+id/tv_adapter_group_goods_time_sec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_13" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15dp"
                        android:src="@drawable/shandian" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10dp"
                android:paddingLeft="@dimen/dp_15dp"
                android:paddingRight="@dimen/dp_15dp"
                android:paddingTop="@dimen/dp_10dp">

                <!--<ImageView-->
                <!--android:id="@+id/tv_group_purchase_goods_info_share"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:src="@drawable/wd1"/>-->


                <LinearLayout
                    android:id="@+id/ll_goods_info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_group_purchase_goods_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="商品标题"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView android:visibility="gone"
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_group_purchase_goods_info_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ll_goods_info_title"
                    android:layout_below="@+id/ll_goods_info_title"
                    android:layout_marginBottom="@dimen/dp_3dp"
                    android:gravity="left|center"
                    android:text="商品标题"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/text_size_14" />


                <LinearLayout
                    android:id="@+id/ll_group_per_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_group_purchase_goods_info_desc"
                    android:layout_below="@+id/tv_group_purchase_goods_info_desc"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/pb_group_purchase_goods_info_count_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/tv_group_purchase_goods_info_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="参团0人"
                        android:textColor="@color/black_gray"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_group_purchase_goods_info_surplus_count"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="剩余0人"
                        android:textColor="@color/black_gray"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10dp"
                android:layout_marginRight="@dimen/dp_10dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15dp"
                android:paddingRight="@dimen/dp_15dp"
                android:paddingTop="@dimen/dp_10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.pbph.yuguo.myview.FlowLayout
                        android:id="@+id/tv_group_purchase_goods_info_express"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <include
                    android:id="@+id/include_vip_coupon_layout"
                    layout="@layout/include_vip_coupon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10dp"
                    android:visibility="gone" />

            </LinearLayout>

            <include
                android:id="@+id/include_group_purchase_goods_info_layout"
                layout="@layout/include_goods_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15dp"
                android:layout_marginRight="@dimen/dp_15dp"
                android:layout_marginTop="@dimen/dp_10dp" />

            <WebView
                android:id="@+id/nvwv_group_purchase_goods_info_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_group_purchase_group_purchase_goods_info_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_color"
        android:gravity="center"
        android:text="立即参团"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />
</RelativeLayout>
