<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods_image"
        android:layout_width="@dimen/dp_100dp"
        android:layout_height="@dimen/dp_100dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:layout_marginTop="18dp"
        android:src="@drawable/dachengzi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_5dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            tools:text="进口牛油果500g*10个进口牛油果500g*10个"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5dp"
            android:ellipsize="end"
            android:lines="1"
            tools:text="乔布斯都超爱吃的水果"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:id="@+id/ll_tag_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5dp"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5dp"
            android:layout_marginTop="@dimen/dp_5dp">

            <TextView
                android:id="@+id/tv_vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="￥500"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="@dimen/dp_40dp"
                android:layout_height="@dimen/dp_15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_vip_price"
                android:background="@drawable/vip_price_corner_bg"
                android:gravity="center"
                android:text="会员价"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_5dp"
                android:src="@drawable/shoppingcart_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10dp"
            android:layout_marginTop="@dimen/dp_5dp"
            tools:text="￥500"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>
