<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_10dp"
    android:paddingTop="@dimen/dp_10dp">

    <ImageView
        android:id="@+id/iv_adapter_evaluate_list_head"
        android:layout_width="@dimen/dp_50dp"
        android:layout_height="@dimen/dp_50dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/wodeyidenglu_touxiang" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_adapter_evaluate_list_head"
        android:layout_alignTop="@+id/iv_adapter_evaluate_list_head"
        android:layout_toRightOf="@+id/iv_adapter_evaluate_list_head"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_adapter_evaluate_list_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10dp"
            android:layout_weight="1"
            android:text="测试"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_13"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tv_adapter_evaluate_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.01.01"
            android:textSize="@dimen/text_size_11"
            android:typeface="monospace" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_adapter_evaluate_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_adapter_evaluate_list_head"
        android:layout_below="@+id/iv_adapter_evaluate_list_head"
        android:layout_marginTop="@dimen/dp_5dp"
        android:text="好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃好吃"
        android:textSize="@dimen/text_size_12"
        android:typeface="monospace" />

    <com.pbph.yuguo.myview.MyGridView
        android:id="@+id/gv_evaluate_image_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_adapter_evaluate_list_content"
        android:layout_below="@+id/tv_adapter_evaluate_list_content"
        android:layout_marginTop="@dimen/dp_5dp"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="1dp" />

</RelativeLayout>

