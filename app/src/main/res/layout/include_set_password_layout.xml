<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/dp_25dp"
            android:src="@drawable/notice" />

        <TextView
            android:id="@+id/tv_verify_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10dp"
            android:text="设置支付密码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_tips_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10dp"
            android:text="为了您的资金安全，请设置支付密码" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_ebebeb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_5dp"
        android:background="@color/gray_ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入密码"
            android:textColor="@color/black" />

        <com.pbph.yuguo.myview.PasswordInputEdt
            android:id="@+id/pie_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10dp"
            android:textColor="@color/white"
            app:autoCloseKeyBoard="true"
            app:bgCorner="@dimen/dp_5dp"
            app:isPwd="true"
            app:pwdType="CIRCLE"
            app:rectNormalColor="@color/gray_ebebeb"
            app:rectStroke="0.5dp"
            app:textColor="@color/black_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15dp"
            android:text="请再次输入密码"
            android:textColor="@color/black" />

        <com.pbph.yuguo.myview.PasswordInputEdt
            android:id="@+id/pie_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10dp"
            android:textColor="@color/white"
            app:autoCloseKeyBoard="true"
            app:bgCorner="@dimen/dp_5dp"
            app:isPwd="true"
            app:pwdType="CIRCLE"
            app:rectNormalColor="@color/gray_ebebeb"
            app:rectStroke="0.5dp"
            app:textColor="@color/black_gray" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50dp"
            android:layout_marginLeft="@dimen/dp_15dp"
            android:layout_marginRight="@dimen/dp_15dp"
            android:layout_marginTop="@dimen/dp_50dp"
            android:background="@drawable/text_view_border"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
