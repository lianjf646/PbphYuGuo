<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_7dp"
        android:layout_marginTop="@dimen/dp_7dp"
        android:drawablePadding="@dimen/px_1"
        android:gravity="center"
        android:textColor="@drawable/tab_tc_selecter"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_point_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textview"
        android:layout_gravity="center"
        android:layout_marginLeft="-7dp"
        android:layout_toRightOf="@id/textview"
        android:background="@drawable/main_shop_num_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minHeight="15dp"
        android:minWidth="15dp"
        android:paddingBottom="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="invisible" />

</RelativeLayout>
