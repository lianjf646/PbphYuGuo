<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_open_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:text="立即开通"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.pbph.yuguo.myview.HeaderGridView
        android:id="@+id/gv_more_goods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f2f2f2"
        android:horizontalSpacing="@dimen/dp_5dp"
        android:numColumns="2"
        android:verticalSpacing = "@dimen/dp_5dp"
        app:layout_constraintBottom_toTopOf="@id/btn_open_vip"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ivbtn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="@dimen/dp_15dp"
        android:src="@drawable/back" />


</android.support.constraint.ConstraintLayout>