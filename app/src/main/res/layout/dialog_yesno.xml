<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16" />

    <View
        android:id="@+id/view"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerInParent="true" />


    <View
        android:id="@+id/button1line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/view"
        android:background="#d7d7d7" />

    <View
        android:id="@+id/button2line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/view"
        android:layout_alignParentRight="true"
        android:background="@color/main_color" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/view"
        android:background="@drawable/dialog_left_bg"
        android:paddingBottom="@dimen/dp_15dp"
        android:paddingTop="@dimen/dp_15dp"
        android:text="取消"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_19" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/dialog_right_bg"
        android:paddingBottom="@dimen/dp_15dp"
        android:paddingTop="@dimen/dp_15dp"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_19" />
</RelativeLayout>

