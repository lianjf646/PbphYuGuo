<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_5dp"
    android:paddingTop="@dimen/dp_5dp">

    <ImageView
        android:id="@+id/btn_left_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="@dimen/dp_15dp"
        android:paddingRight="@dimen/dp_15dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/tv_title_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="促销清单"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        android:typeface="monospace" />


    <RelativeLayout
        android:id="@+id/btn_right_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/dp_3dp"
        android:paddingLeft="@dimen/dp_15dp"
        android:paddingRight="@dimen/dp_15dp"
        android:paddingTop="@dimen/dp_3dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/tv_goods_info_shopping_trolley_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_cart1" />

        <TextView
            android:id="@+id/tv_goods_info_shopping_trolley_count_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_goods_info_shopping_trolley_self"
            android:background="@drawable/green_radius1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="15dp"
            android:minWidth="15dp"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </RelativeLayout>


</RelativeLayout>

