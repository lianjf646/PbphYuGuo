<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.pbph.yuguo.myview.MyGridView
        android:id="@+id/gv_vip_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15dp"
        android:layout_marginStart="@dimen/dp_15dp"
        android:horizontalSpacing="@dimen/dp_5dp"
        android:numColumns="2"
        android:verticalSpacing="@dimen/dp_5dp" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gv_vip_goods"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/right"
        android:drawablePadding="@dimen/dp_5dp"
        android:padding="@dimen/dp_15dp"
        android:text="查看更多"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12" />
</RelativeLayout>
