<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_shenfenzheng_bian"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_centerInParent="true"
            android:src="@drawable/identificationofdecoration"/>
        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/wodeyidenglu_touxiang"/>



    </RelativeLayout>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="您还未实名认证"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/dark_gray"/>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已实名认证"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_15"
            android:textColor="#333333"/>

           <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘某某"
            android:layout_marginTop="@dimen/dp_10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_15"
            android:textColor="#333333"/>

           <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1*********7"
            android:layout_marginTop="@dimen/dp_10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_15"
            android:textColor="#333333"/>




    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/gray_ebebeb" />




    <RelativeLayout
        android:id="@+id/rl_realname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45dp"
        android:paddingEnd="@dimen/dp_15dp"
        android:paddingStart="@dimen/dp_15dp">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/uploaddocuments"
            />

        <TextView
            android:id="@+id/tv_1"
            android:layout_toRightOf="@id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="上传证件"
            android:layout_marginStart="9dp"
            android:textColor="@color/black" />




        <ImageView
            android:id="@+id/iv_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center|end"
            android:src="@drawable/right"
            android:padding="@dimen/dp_5dp"
           />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_ebebeb" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <TextView
            android:id="@+id/tv_yuanyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25dp"
            android:layout_marginStart="@dimen/dp_15dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:visibility="gone"
            android:text="驳回原因：证件照拍摄不清晰，闪光强烈。无法识别身份信息。"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_gray"/>
    </LinearLayout>









</LinearLayout>