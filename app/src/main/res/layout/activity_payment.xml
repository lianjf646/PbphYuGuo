<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fkm_bg"
    android:orientation="vertical"
    tools:context="com.pbph.yuguo.activity.AccountSecurityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/dp_15dp"
        android:layout_marginRight="@dimen/dp_15dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_white_radius_5">

        <ImageView
            android:id="@+id/iv_user_face"
            android:layout_width="@dimen/dp_50dp"
            android:layout_height="@dimen/dp_50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15dp"
            android:layout_toEndOf="@+id/iv_user_face"
            android:layout_toStartOf="@+id/view_divider"
            tools:text="13845789654" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_40dp"
            android:layout_alignStart="@+id/ll_balance"
            android:layout_centerVertical="true"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/ll_balance"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="￥9654"
                android:textColor="@color/main_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5dp"
                android:text="余额·储值" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15dp"
        android:layout_marginRight="@dimen/dp_15dp"
        android:layout_marginTop="@dimen/dp_10dp"
        android:background="@drawable/bg_white_radius_5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bar_code"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginEnd="@dimen/dp_30dp"
            android:layout_marginStart="@dimen/dp_30dp"
            android:layout_marginTop="@dimen/dp_40dp"
            android:scaleType="fitXY"
            android:background="@drawable/fkm_pic1" />

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dp_30dp"
            android:background="@drawable/fkm_pic2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30dp"
            android:background="@drawable/fkm_logo" />
    </LinearLayout>
</LinearLayout>
