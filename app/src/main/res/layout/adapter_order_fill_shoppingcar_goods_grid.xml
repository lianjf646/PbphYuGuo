<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_order_fill_shopingcar_goods_corner">

    <ImageView
        android:id="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/wodeyidenglu_touxiang" />

    <ImageView
        android:id="@+id/iv_order_fill_zp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_alignTop="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:src="@drawable/complimentary"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_order_fill_shopping_car_goods_adapter_invalid_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_alignLeft="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_alignRight="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_alignTop="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:background="#88ffffff" />

    <TextView
        android:id="@+id/tv_order_fill_shopping_car_goods_adapter_invalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_alignLeft="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:layout_alignRight="@+id/iv_order_fill_shopping_car_goods_adapter_image"
        android:background="#80000000"
        android:gravity="center"
        android:text="失效"
        android:textColor="@color/white" />

</RelativeLayout>

